<div class="slide">
	<div class="header">
		{{#words}}
		<h1 class="title">{{name}}</h1>
		{{/words}}
		<div class="hero">{{#if next}}
			<div class="navigation">
				<a href="{{prev.path}}" title="{{prev.name}}" 
					class="prev-link arrow">
					<span class="prev-arrow">&#9664;</span>
				</a>
				<a href="{{next.path}}" title="{{next.name}}"  
					class="next-link arrow">
					<span class="next-arrow	">&#9654;</span>
				</a></div>
			{{/if}}
			{{#if photo}}
			<img class="hero-img" src="{{photo.url_z}}" alt="">
			{{else}}
			<img class="hero-img" src="/images/chicken.jpg">
			{{/if}}
		</div>
	
	</div>
	<div class="bd">
		{{{words.content}}}
	</div>
</div>